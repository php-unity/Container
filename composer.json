{
    "name": "unity/container",
    "version": "0.1",
    "description": "Unity framework dependency manager.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eleandro Duzentos",
            "email": "eleandro@inbox.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "unity/reflector": "^1.1",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "make/accessible": "^2.2"
    },
    "autoload": {
	    "psr-4": {
            "Unity\\Component\\Container\\": "src/"
	    }
    },
    "autoload-dev": {
	    "psr-4": {
            "Unity\\Tests\\Container\\": "tests"
	    }
    }
}
