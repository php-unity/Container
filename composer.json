{
    "name": "unity/container",
    "version": "2.0.0",
    "description": "The Unity framework psr-11 implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eleandro Duzentos",
            "email": "eleandro@inbox.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "psr/container": "^1.0",
        "phpdocumentor/reflection-docblock": "^4.1",
        "unity/reflector": "^0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "make/accessible": "^2.0"
    },
    "repositories": [
        {
          "type": "vcs",
          "url": "../Reflector"
        }
    ],
    "autoload": {
	    "psr-4": {
            "Unity\\Component\\Container\\": "src/"
	    }
    },
    "autoload-dev": {
	    "psr-4": {
            "Helpers\\": "tests/Helpers"
	    }
    }
}
