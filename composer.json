{
    "name": "unity/container",
    "description": "Unity framework dependency manager.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eleandro Duzentos",
            "email": "eleandro@inbox.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "unity/contracts": "dev-master",
        "unity/reflector": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "make/accessible": "dev-master"
    },
    "autoload": {
	    "psr-4": {
            "Unity\\Component\\Container\\": "src/"
	    }
    },
    "autoload-dev": {
	    "psr-4": {
            "Unity\\Tests\\Container\\": "tests"
	    }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "../contracts"
        },
        {
            "type": "vcs",
            "url": "../reflector"
        },
        {
            "type": "vcs",
            "url": "../make_accessible"
        }
    ]
}
